<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/chatRelLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/deafult_dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0.2dp" />

        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_toLeftOf="@id/timeLayout"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/profilePic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/brand_font"
                android:maxLines="1"
                android:text="Your Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.vanniktech.emoji.EmojiEditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:clickable="false"
                android:cursorVisible="false"
                android:ellipsize="end"
                android:focusable="false"
                android:fontFamily="@font/sf_regular"
                android:lines="1"
                android:paddingVertical="3dp"
                app:emojiSize="18dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="message will appear here"
                android:textColor="#6A706D"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/timeLayout"
            android:layout_toLeftOf="@id/notif"
            android:orientation="vertical"
            android:gravity="center">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="12:00"
            android:textColor="#6A706D" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delivered"
            android:textSize="10dp"
            android:textColor="#94A89F"
            android:id="@+id/status"
            android:layout_below="@id/time"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@id/nameLayout"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:paddingEnd="2dp"
            android:text="●"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#1E000000"
        app:layout_constraintTop_toBottomOf="@id/chatRelLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>