<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingStart="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="27/10/2023"
        android:visibility="gone"
        android:textColor="@color/black"
        android:id="@+id/time"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintWidth_percent="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/recieve_bg"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:minWidth="50dp"
            android:padding="6dp">

            <com.vanniktech.emoji.EmojiEditText
                android:clickable="false"
                android:focusable="false"
                android:cursorVisible="false"
                android:id="@+id/receive_textmesssage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recieve_bg"
                android:text="you sent this message."
                android:paddingEnd="15dp"
                android:backgroundTint="#cccecd"
                android:fontFamily="@font/brand_font"
                android:textColor="#0c0c0c"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/receive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/brand_font"
                android:gravity="end"
                android:textSize="10sp"
                android:text="12:00"
                android:layout_gravity="end"
                android:textColor="#868686"

                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>